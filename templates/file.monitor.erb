# Watch <%= @name %>
$InputFileName <%= @input %>
$InputFileTag <%= @rtag %>:
$InputFileStateFile <%= @state %>
$InputFileReadMode  <%= @file_read_mode %>             # 0 = line based (Each line is a new message)
